python3 - <<PYEND
import os
from time import sleep
from vyos.util import call
from vyos.util import get_all_vrfs

# Wait for the system to be fully configured.
while not os.path.isfile('/tmp/vyos-config-status'):
    sleep(0.2)

# Refresh static routes in all VRFs.
call('/usr/libexec/vyos/conf_mode/protocols_static.py')
for vrf in get_all_vrfs():
    call(f'/usr/libexec/vyos/conf_mode/protocols_static.py {vrf}')
PYEND
